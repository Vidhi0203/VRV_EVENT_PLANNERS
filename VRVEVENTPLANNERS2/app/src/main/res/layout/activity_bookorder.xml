<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bookorder"
    android:background="@drawable/design">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:background="@drawable/fade2">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="BOOK YOUR EVENT"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.054" />

        <TextView
            android:id="@+id/eventtitle"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:fontFamily="sans-serif-medium"
            android:text="Event Title"
            android:paddingRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.052"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.03" />

        <EditText
            android:id="@+id/evtttl"
            android:layout_width="346dp"
            android:layout_height="50dp"
            android:background="@drawable/button_border"
            android:ems="10"
            android:editable="false"
            android:hint="John's Wedding/Dev's Birthday"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventtitle"
            app:layout_constraintVertical_bias="0.026" />



        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:fontFamily="sans-serif-medium"
            android:text="Event Date"
            android:paddingRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/evtttl"
            app:layout_constraintVertical_bias="0.043" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp">
            <Button
                android:id="@+id/sdate"
                android:layout_width="150dp"
                android:layout_height="53dp"
                android:background="@drawable/button_border"
                android:hint="Start Date"
                android:layout_marginRight="20dp"
                android:textColor="#FFFFFF"
                android:textColorHint="@color/white"
                android:textStyle="bold"
                app:iconTint="#000000"/>

            <Button
                android:id="@+id/edate"
                android:layout_width="150dp"
                android:layout_height="53dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_border"
                android:hint="End Date"
                android:textColor="#FFFFFF"
                android:textColorHint="@color/white"
                android:textStyle="bold"
                app:iconTint="#000000"/>
        </TableRow>

        <TextView
            android:id="@+id/dayDiffernt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-medium"
            android:paddingRight="10dp"
            android:text="Customer Address"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.067"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sdate"
            app:layout_constraintVertical_bias="0.035" />

        <EditText
            android:id="@+id/Fhsno"
            android:layout_width="343dp"
            android:layout_height="99dp"
            android:background="@drawable/button_border"
            android:ems="10"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:hint="Flat/House no., Building/Apatment"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:paddingStart="15dp"
            android:paddingBottom="2dp"
            android:paddingEnd="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.057" />

        <EditText
            android:id="@+id/city"
            android:layout_width="346dp"
            android:layout_height="50dp"
            android:background="@drawable/button_border"
            android:ems="10"
            android:hint="Town/City"
            android:textSize="16sp"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="2dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/state"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Fhsno" />

        <EditText
            android:id="@+id/state"
            android:layout_width="346dp"
            android:layout_height="50dp"
            android:background="@drawable/button_border"
            android:ems="10"
            android:hint="State"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="2dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Fhsno"
            app:layout_constraintVertical_bias="0.939" />

        <EditText
            android:id="@+id/member_number"
            android:layout_width="346dp"
            android:layout_height="50dp"
            android:background="@drawable/button_border"
            android:ems="10"
            android:hint="Total Number of Member"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="2dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Fhsno"
            app:layout_constraintVertical_bias="0.939" />

        <Button
            android:id="@+id/booknow"
            android:layout_width="128dp"
            android:layout_height="53dp"
            android:background="@drawable/button_border"
            android:hint="Book Now"
            android:layout_marginTop="15dp"
            android:textColor="#FFFFFF"
            android:textColorHint="@color/white"
            android:layout_gravity="center"
            android:textStyle="bold"
            app:iconTint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/state"
            app:layout_constraintVertical_bias="0.509" />

    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>